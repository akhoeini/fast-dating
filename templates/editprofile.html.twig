{% extends "master.html.twig" %}

{% block addHead %}
	<link rel="stylesheet" href="../styles/profile.css">
{% endblock %}

{% block content %}
	<div class="wrapper">
		<h4 class="pb-4 border-bottom">My Profile</h4>
		<div class="d-flex align-items-start py-3 border-bottom">
			{% for picture in pics %}
				<div class="d-flex flex-column">
				<img src="../{{ picture.url }}" class="img">
				<b>Photo</b>
				</div>
			{% endfor %}
			<div class="pl-sm-4 pl-2" id="img-section">
				<b>Photo</b>
				<p>Accepted file type .jpeg .bitmap .png. Less than 2MB</p>
				<button class="btn button border">
					<b>Upload</b>
				</button>
			</div>
		</div>
		<div class="py-2">
			<div class="row py-2">
				<div class="col-md-6">
					<label for="firstname">First Name</label>
					<input type="text" class="bg-light form-control" value="{{u.firstName}}">
				</div>
				<div class="col-md-6 pt-md-0 pt-3">
					<label for="location">Location</label>
					<input type="text" class="bg-light form-control" value="{{u.location}}">
				</div>
			</div>
			<div class="row py-2">
				<div class="col-md-6">
					<label for="email">Username</label>
					<input type="text" class="bg-light form-control" value="{{u.userName}}">
				</div>
				<div class="col-md-6 pt-md-0 pt-3">
					<label for="phone">Email</label>
					<input type="tel" class="bg-light form-control" value="{{u.email}}">
				</div>
			</div>
			<div class="row py-2">
				<div class="col-md-6">
					<label for="gender">Gender</label>
					<select name="gender" id="gender" class="bg-light">
						<option value="1">Male</option>
						<option value="2">Female</option>
					</select>
				</div>
				<div class="col-md-6 pt-md-0 pt-3" id="genderLF">
					<fieldset>
						<legend>I'm looking for:</label>
						<div>
							<input type="checkbox" id="men" name="genderLF" value="1">
							<label class="checkbox" for="men">Men</label>
						</div>
						<div>
							<input type="checkbox" id="music" name="genderLF" value="2">
							<label class="checkbox" for="Women">Women</label>
						</div>
					</fieldset>
				</div>
			</div>
			<div class="py-3 pb-4 border-bottom">
				<button class="btn btn-primary mr-3">Save Changes</button>
				<button class="btn border button">Cancel</button>
			</div>
			<div class="d-sm-flex align-items-center pt-3" id="deactivate">
				<div>
					<b>Deactivate your account</b>
					<p>Details about your account and password</p>
				</div>
				<div class="ml-auto">
					<button class="btn danger">Deactivate</button>
				</div>
			</div>
		</div>
	</div>

{% endblock content %}
