<style>
body {
    font-family:Verdana, Arial, sans-serif;
    height: 100vh;
    display: flex;
    flex-direction: column;     
    margin: auto;
}

header {
    background-color: #869dc7;
    color: #b1b1d3; 
    font-size: 120%; 
    padding: 10px 10px 10px 10px;
    background-repeat: no-repeat;
    background-color: rgb(190, 13, 119);
    height: 80px;
    display: flex;
    flex-direction: row;
    z-index: 1;
}

h1 {
    position: relative;
    margin:auto;
    margin-left:10px;    
    color: rgb(255,255,255);
}

.main {
    width:100%;
    display: flex;
}

.sidebar { 
       float: left;
	   width: 220px;
       height: 100vh;
	   letter-spacing:0.1em;
	   font-weight: bold;
       background-color: rgb(236,236,255);
       z-index: 1;
} 

.sidebar ul { 
        list-style-type: none; 
        margin: 0;
        padding: 5px;
}

.sidebar a { 
text-decoration: none; 
        display: block;
	    padding: 20px;    
        background-color: #b3c7e6;     
	    border-bottom: 1px solid #ffffff; 
        border-radius: 3px;
}
.sidebar a:link { 
    color: #ffffff; 
}
.sidebar a:visited { 
    color: #eaeaea; 
}
.sidebar a:hover { 
    background-color: #eaeaea;
    color: #869dc7;
    cursor: pointer;
}

#content { 
    background-color: #ffffff;
    color: #000000;
    padding: 10px 10px;
    margin:auto;
    z-index: 0;
    padding-top: auto;
} 

footer {
    position: fixed;

    font-size:70%;
    text-align: center;
    padding-top: 20px;
    
    width: 100%;
    height: 5vh;
    margin: auto;
    padding: auto;

    left: 0;
  bottom: 0;
  width: 100%;
  background-color: rgba(134, 157, 199, 0.5);
  color: white;
  text-align: center;   
  z-index:1; 
}

.main-nav {
    position: relative;
    width: auto;
    padding: 10px 10px 10px 10px;    
    --color-1: rgba(196, 206, 214, 0.8);
    --color-2: rgba(75, 96, 114, 0.8);      
}

.main-nav ul li {
  display: inline;
  padding: 1em;
  list-style-type: none;  
}
.main-nav ul li:last-child {
  border-bottom: none;
}
.main-nav ul li a {
  color: rgb(255,255,255);
  text-decoration: none;
}
.main-nav ul li a:hover {
  color: var(--color-2);
}
</style>
</head>
